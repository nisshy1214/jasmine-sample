root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.rb]
indent_style = space
indent_size = 2

[*.thor]
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 2

[{Rake,Gem}file]
indent_style = space
indent_size = 2

[{package,bower}.json]
indent_style = space
indent_size = 2
